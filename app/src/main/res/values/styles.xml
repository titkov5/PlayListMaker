<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainBackground">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="SecondaryBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="SettingsBackground.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="iconTint">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginTop">@dimen/padding_16</item>
        <item name="android:layout_marginStart">@dimen/padding_16</item>
        <item name="android:layout_marginEnd">@dimen/padding_16</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">@integer/button_weight</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textFontWeight">@integer/font_weight_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="iconPadding">@dimen/padding_16</item>
        <item name="cornerRadius">@dimen/padding_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="SettingsTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_61</item>
        <item name="android:paddingStart">@dimen/padding_12</item>
        <item name="android:paddingEnd">@dimen/padding_12</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight">@integer/font_weight_regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="navigationIconTint">@color/black</item>
        <item name="android:layout_height">@dimen/height_56</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textFontWeight">@integer/font_weight_medium</item>
    </style>

    <style name="DarkThemSwithcer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_61</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight">@integer/font_weight_regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:paddingStart">@dimen/padding_12</item>
    </style>

    <style name="SettingsImageStyle">
        <item name="android:layout_width">@dimen/size_24</item>
        <item name="android:layout_height">@dimen/size_24</item>
        <item name="android:layout_marginEnd">@dimen/right_icon_margin</item>
        <item name="android:layout_marginTop">@dimen/right_icon_margin</item>
        <item name="android:layout_marginStart">@dimen/right_icon_margin</item>
    </style>

    <style name="TextEditStyle">
        <item name="android:backgroundTint">@color/light_gray</item>
        <item name="android:textColorHint">@color/text_gray</item>
        <item name="android:drawableTint">@color/text_gray</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ClearButtonStyle">
        <item name="android:tint">@color/text_gray</item>
    </style>

    <style name="TrackLinearLayout">
        <item name="android:background">@color/white</item>
    </style>

    <style name="TrackTitle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ActivitySearchWarnTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/padding_16</item>
        <item name="android:textSize">@dimen/text_size_19</item>
        <item name="android:textFontWeight">@integer/font_weight_regular</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="ActivitySearch.Warn.Title.Theme" parent="ActivitySearchWarnTitle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TrackSearchWarnImage">
        <item name="android:layout_width">@dimen/icon_size_120</item>
        <item name="android:layout_height">@dimen/icon_size_120</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">100dp</item>
    </style>

<style name="TrackSearch.Warn.Image.Noting" parent="TrackSearchWarnImage">
    <item name="android:src">@drawable/no_tracks_light</item>
</style>

    <style name="TrackSearch.Warn.Image.NoInternet" parent="TrackSearchWarnImage">
        <item name="android:src">@drawable/no_internet_light</item>
    </style>

    <style name="TrackSearch.Warn.Button.Retry" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginTop">@dimen/padding_24</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>


        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textFontWeight">@integer/font_weight_medium</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/padding_16</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="TrackSearch.Warn.Button.Retry.Theme" parent="TrackSearch.Warn.Button.Retry">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>
    <!--Player-->
    <style name="PlayerDetails">
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:textFontWeight">@integer/font_weight_regular</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="PlayerDetailsTitle" parent="PlayerDetails">
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="PlayerDetailsValue" parent="PlayerDetails">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PlayerMainTitle" >
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="PlayerSubTitle" >
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PlayerPlay">
        <item name="android:src">@drawable/play_light</item>
    </style>

    <style name="PlayerAdd">
        <item name="android:src">@drawable/add_light</item>
    </style>

    <style name="PlayerLike">
        <item name="android:src">@drawable/like_light</item>
    </style>

</resources>