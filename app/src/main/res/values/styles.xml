<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainBackground">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="SettingsBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="SettingsBackground.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="iconTint">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginTop">@dimen/padding_16</item>
        <item name="android:layout_marginStart">@dimen/padding_16</item>
        <item name="android:layout_marginEnd">@dimen/padding_16</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">@integer/button_weight</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textFontWeight">@integer/font_weight</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="iconPadding">@dimen/padding_16</item>
        <item name="cornerRadius">@dimen/padding_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="SettingsTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/height_56</item>
        <item name="android:paddingStart">@dimen/padding_12</item>
        <item name="android:paddingEnd">@dimen/padding_12</item>
        <item name="android:paddingTop">@dimen/padding_top_10</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight">@integer/font_weight</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
<style name="SettingsImageStyle">
    <item name="android:layout_width">@dimen/size_24</item>
    <item name="android:layout_height">@dimen/size_24</item>
    <item name="android:layout_marginEnd">@dimen/right_icon_margin</item>
    <item name="android:layout_marginTop">@dimen/right_icon_margin</item>
    <item name="android:layout_marginStart">@dimen/right_icon_margin</item>
</style>

</resources>