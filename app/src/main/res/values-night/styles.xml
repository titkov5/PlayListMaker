<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainBackground">
        <item name="android:background">@color/black</item>
    </style>

    <style name="SecondaryBackground">
        <item name="android:background">@color/black</item>
    </style>

    <style name="SettingsBackground.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="iconTint">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="SettingsTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_61</item>
        <item name="android:paddingStart">@dimen/padding_12</item>
        <item name="android:paddingEnd">@dimen/padding_12</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">@integer/font_weight_regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="drawableSize">24dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="DarkThemSwithcer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_61</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">@integer/font_weight_regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="thumbTint">@color/blue</item>
        <item name="android:paddingStart">@dimen/padding_12</item>
    </style>

    <style name="TextEditStyle">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="android:layout_height">@dimen/height_56</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textFontWeight">@integer/font_weight_medium</item>
    </style>

    <style name="ClearButtonStyle">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="TrackLinearLayout">
        <item name="android:background">@color/black</item>
    </style>
    <style name="TrackTitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActivitySearch.Warn.Title.Theme" parent="ActivitySearchWarnTitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TrackSearch.Warn.Image.Noting" parent="TrackSearchWarnImage">
        <item name="android:src">@drawable/no_tracks_dark</item>
    </style>

    <style name="TrackSearch.Warn.Image.NoInternet" parent="TrackSearchWarnImage">
        <item name="android:src">@drawable/no_internet_dark</item>
    </style>

    <style name="TrackSearch.Warn.Button.Retry.Theme" parent="TrackSearch.Warn.Button.Retry">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="PlayerDetailsValue" parent="PlayerDetails">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PlayerMainTitle" >
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PlayerSubTitle" >
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PlayerPlay">
        <item name="android:src">@drawable/play_dark</item>
    </style>

    <style name="PlayerAdd">
        <item name="android:src">@drawable/add_dark</item>
    </style>

    <style name="PlayerLike">
        <item name="android:src">@drawable/like_dark</item>
    </style>
</resources>