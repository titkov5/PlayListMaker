<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainBackground">
        <item name="android:background">@color/black</item>
    </style>

    <style name="SecondaryBackground">
        <item name="android:background">@color/black</item>
    </style>

    <style name="SettingsBackground.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="iconTint">@color/white</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>

    <style name="SettingsTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_56</item>
        <item name="android:paddingStart">@dimen/padding_12</item>
        <item name="android:paddingEnd">@dimen/padding_12</item>
        <item name="android:paddingTop">@dimen/padding_top_10</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textFontWeight">@integer/font_weight</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="TextEditStyle">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:drawableTint">@color/black</item>
    </style>

    <style name="ClearButtonStyle">
        <item name="android:tint">@color/black</item>
    </style>
</resources>