<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/MainBackground"
        >

<com.google.android.material.appbar.MaterialToolbar
    android:layout_width="match_parent"
    android:layout_height="56dp"
    app:title="@string/play_list_maker_title"
    android:fontFamily="@font/ys_display_medium"
    android:textSize="@dimen/text_size_22"
    android:paddingStart="@dimen/padding_12"
    android:paddingTop="10dp"
    android:textColor="@color/white"
    android:textFontWeight="@integer/font_weight_medium"
    />
        <Button
            android:id="@+id/search_button"
            style="@style/MainButtonStyle"
            app:icon="@drawable/search"
            android:text="@string/search"
            android:layout_marginTop="@dimen/padding_24"
            />

        <Button
            android:id="@+id/library_button"
            style="@style/MainButtonStyle"
            app:icon="@drawable/library"
            android:text="@string/media_library"
            />

        <Button
            android:id="@+id/settings_button"
            style="@style/MainButtonStyle"
            app:icon="@drawable/settings"
            android:text="@string/settings"
            />
    </LinearLayout>
