<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        style="@style/MainBackground"
        >
        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_56"
                android:paddingStart="@dimen/padding_12"
                android:paddingEnd="@dimen/padding_12"
                android:paddingTop="10dp"
                android:text="@string/play_list_maker_title"
                android:textColor="@color/white"
                android:textFontWeight="@integer/font_weight"
                android:textSize="@dimen/text_size_22"
                android:fontFamily="@font/ys_display_medium"
                />
        </FrameLayout>

        <Button
            android:id="@+id/search_button"
            style="@style/MainButtonStyle"
            app:icon="@drawable/search"
            android:text="@string/search"
            />

        <Button
            android:id="@+id/library_button"
            style="@style/MainButtonStyle"
            app:icon="@drawable/library"
            android:text="@string/media_library"
            />

        <Button
            android:id="@+id/settings_button"
            style="@style/MainButtonStyle"
            app:icon="@drawable/settings"
            android:text="@string/settings"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
