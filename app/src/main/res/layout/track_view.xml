<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/TrackLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_61"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    >

    <ImageView
        style="Widget.MaterialComponents.ShapeableImageView"
        android:id="@+id/track_cell_image"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:backgroundTint="@color/text_gray"
        android:layout_marginTop="@dimen/padding_8"
        android:layout_marginStart="@dimen/padding_13"
        android:layout_marginBottom="@dimen/padding_8"
        android:src="@drawable/track_placeholder"
        android:scaleType="centerCrop"
        cornerRadisus="2dp"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/padding_8"
        >

        <TextView
            style="@style/TrackTitle"
            android:id="@+id/track_cell_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textFontWeight="@integer/font_weight_regular"
            android:fontFamily="@font/ys_display_regular"
            android:textSize="@dimen/text_size_16"
            android:layout_marginTop="@dimen/padding_14"
            android:text="Artist Name"
            android:ellipsize="end"
            android:maxLines="1"
            />

        <TextView
            android:id="@+id/track_cell_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_1"
            android:fontFamily="@font/ys_display_regular"
            android:textColor="@color/text_gray"
            android:textFontWeight="@integer/font_weight_regular"
            android:text="Track name \u2022 time"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/text_size_11" />
    </LinearLayout>
    <ImageView
        android:layout_width="@dimen/size_24"
        android:layout_height="@dimen/size_24"
        android:backgroundTint="@color/text_gray"
        android:layout_marginTop="@dimen/padding_21"
        android:layout_marginStart="@dimen/padding_13"
        android:src="@drawable/arrow_forward"
        />
</LinearLayout>