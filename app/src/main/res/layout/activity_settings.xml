<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_56"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="1dp"
            android:background="@color/white"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/back_button"
                android:layout_width="@dimen/height_56"
                android:layout_height="@dimen/height_56"
                app:icon="@drawable/arrow_back"
                app:iconTint="@color/black"
                android:backgroundTint="@color/white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_56"
                android:paddingStart="@dimen/padding_12"
                android:paddingEnd="@dimen/padding_12"
                android:paddingTop="@dimen/padding_top_10"
                android:text="@string/settings"
                android:textColor="@color/black"
                android:textFontWeight="@integer/font_weight"
                android:textSize="@dimen/text_size_22"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_61"
            android:layout_marginTop="@dimen/size_24"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_56"
                android:paddingStart="@dimen/padding_12"
                android:paddingEnd="@dimen/padding_12"
                android:paddingTop="10dp"
                android:text="@string/dark_theme"
                android:textColor="@color/black"
                android:textFontWeight="@integer/font_weight"
                android:textSize="@dimen/text_size_22"/>

            <Switch
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/right_icon_margin"
                >
            </Switch>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_61"
            android:background="@color/white"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/padding_12"
                android:paddingEnd="@dimen/padding_12"
                android:paddingTop="10dp"
                android:text="@string/share_app"
                android:textColor="@color/black"
                android:textFontWeight="@integer/font_weight"
                android:textSize="@dimen/text_size_22"/>

            <ImageView
                android:layout_width="@dimen/size_24"
                android:layout_height="@dimen/size_24"
                android:layout_marginEnd="@dimen/right_icon_margin"
                android:layout_marginTop="@dimen/right_icon_margin"
                android:layout_marginStart="@dimen/right_icon_margin"
                android:src="@drawable/share"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_61"
            android:background="@color/white"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/padding_12"
                android:paddingEnd="@dimen/padding_12"
                android:paddingTop="10dp"
                android:text="@string/contact_support"
                android:textColor="@color/black"
                android:textFontWeight="@integer/font_weight"
                android:textSize="@dimen/text_size_22"/>

            <ImageView
                android:layout_width="@dimen/size_24"
                android:layout_height="@dimen/size_24"
                android:layout_marginEnd="@dimen/right_icon_margin"
                android:layout_marginTop="@dimen/right_icon_margin"
                android:layout_marginStart="@dimen/right_icon_margin"
                android:src="@drawable/support"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_61"
            android:background="@color/white"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/padding_12"
                android:paddingEnd="@dimen/padding_12"
                android:paddingTop="10dp"
                android:text="@string/user_agreement"
                android:textColor="@color/black"
                android:textFontWeight="@integer/font_weight"
                android:textSize="@dimen/text_size_22"/>

            <ImageView
                android:layout_width="@dimen/size_24"
                android:layout_height="@dimen/size_24"
                android:layout_marginEnd="@dimen/right_icon_margin"
                android:layout_marginTop="@dimen/right_icon_margin"
                android:layout_marginStart="@dimen/right_icon_margin"
                android:src="@drawable/arrow_forward"
                />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
